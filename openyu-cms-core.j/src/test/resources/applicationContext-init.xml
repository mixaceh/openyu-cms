<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
             http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
             http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<!-- configHelper -->
	<bean id="configHelper" class="org.openyu.cms.app.util.AppConfigHelper">
		<property name="configLocation">
			<value>file:src/main/webapp/WEB-INF/config/etc/config.xml</value>
		</property>
		<!--  
		<property name="log4jConfigLocation">
			<value>classpath:log4j.properties</value>
		</property>
		-->
		<property name="jsonDirLocation">
			<value>file:src/main/webapp/WEB-INF/config/json</value>
		</property>
		<property name="keyDirLocation">
			<value>file:src/main/webapp/WEB-INF/config/key</value>
		</property>
		<property name="serDirLocation">
			<value>file:src/main/webapp/WEB-INF/config/ser</value>
		</property>
		<property name="xmlDirLocation">
			<value>file:src/main/webapp/WEB-INF/config/xml</value>
		</property>
		<property name="excelDirLocation">
			<value>file:src/main/webapp/WEB-INF/config/excel</value>
		</property>
		<property name="outputDirLocation">
			<value>file:src/main/webapp/custom/output</value>
		</property>
		<property name="downloadDirLocation">
			<value>file:src/main/webapp/custom/download</value>
		</property>
		<property name="uploadDirLocation">
			<value>file:src/main/webapp/custom/upload</value>
		</property>
		<property name="resourcePathLocation">
			<value>file:src/main/webapp/custom/resource</value>
		</property>
		<property name="templatePathLocation">
			<value>file:src/main/webapp/WEB-INF/custom/template</value>
		</property>
		<property name="backupPathLocation">
			<value>file:src/main/webapp/WEB-INF/backup</value>
		</property>
	</bean>

	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="1" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>file:src/main/webapp/WEB-INF/config/etc/database.properties</value>
				<value>file:src/main/webapp/WEB-INF/config/etc/database-log.properties
				</value>
			</list>
		</property>
	</bean>

	<bean id="servicePropertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="2" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>file:src/main/webapp/WEB-INF/config/etc/authKeyService.properties
				</value>
			</list>
		</property>
	</bean>

	<!-- must be beanName.property=value   -->
	<bean id="propertyOverrideConfigurer"
		class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
		<property name="locations">
			<list>
			</list>
		</property>
	</bean> 	

