	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="1" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>file:src/main/webapp/WEB-INF/config/etc/database.properties</value>
				<value>file:src/main/webapp/WEB-INF/config/etc/database-log.properties
				</value>
				
				<!-- hbase zookeeper -->
				<value>file:src/main/webapp/WEB-INF/config/etc/hbase-zookeeper.properties
				</value>
				
				<!-- hbase thrift -->
				<value>file:src/main/webapp/WEB-INF/config/etc/hbase-thrift.properties
				</value>

				<!-- cassandra thrift -->
				<value>file:src/main/webapp/WEB-INF/config/etc/cassandra-thrift.properties
				</value>

				<!-- commons net ftp -->
				<value>file:src/main/webapp/WEB-INF/config/etc/commons-net-ftp.properties
				</value>

				<!--  rabbit mq -->
				<value>file:src/main/webapp/WEB-INF/config/etc/rabbitmq.properties</value>
			</list>
		</property>
	</bean>

	<bean id="servicePropertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="order" value="2" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="locations">
			<list>
				<value>file:src/main/webapp/WEB-INF/config/etc/authKeyService.properties
				</value>
			</list>
		</property>
	</bean>

	<!-- must be beanName.property=value   -->
	<bean id="propertyOverrideConfigurer"
		class="org.springframework.beans.factory.config.PropertyOverrideConfigurer">
		<property name="locations">
			<list>
			</list>
		</property>
	</bean>  	

